<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="REGISTRARME"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/corpapel_logo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/corpapel_nombre" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/corpapel_subtitulo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:srcCompat="@drawable/corpapel_informacionsolicitada" />

        <EditText
            android:id="@+id/etNombresRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="NOMBRES APELLIDOS"
            android:inputType="textPersonName"
            android:textColor="?attr/colorBackgroundFloating"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="?attr/colorControlHighlight"
            android:textCursorDrawable="@android:color/background_light"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etPasswordRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColor="?attr/colorBackgroundFloating"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="?attr/colorControlHighlight"
            android:textCursorDrawable="@android:color/background_light"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etNombresEmpresaRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="NOMBRE DE LA EMPRESA"
            android:inputType="textPersonName"
            android:textColor="?attr/colorBackgroundFloating"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="?attr/colorControlHighlight"
            android:textCursorDrawable="@android:color/background_light"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etDireccionRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="DIRECCION"
            android:inputType="textPersonName"
            android:textColor="?attr/colorBackgroundFloating"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="?attr/colorControlHighlight"
            android:textCursorDrawable="@android:color/background_light"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/btnDepartamento"
            android:layout_weight="0.07"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:enabled="false"
                android:textSize="12sp"
                android:gravity="center"
                android:hint="DEPARTAMENTO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etDepartamento"
                android:layout_weight="1" />
            <ImageView
                android:clickable="false"
                android:layout_gravity="center"
                android:src="@drawable/ic_collapse_00007"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnProvincia"
            android:clickable="false"
            android:layout_weight="0.07"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:enabled="false"
                android:textSize="12sp"
                android:gravity="center"
                android:hint="PROVINCIA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etProvincia"
                android:layout_weight="1" />
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_collapse_00007"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDistrito"
            android:layout_weight="0.07"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:enabled="false"
                android:textSize="12sp"
                android:gravity="center"
                android:hint="DISTRITO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etDistrito"
                android:layout_weight="1" />
            <ImageView
                android:clickable="false"
                android:layout_gravity="center"
                android:src="@drawable/ic_collapse_00007"
                android:layout_width="35dp"
                android:layout_height="35dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/etCorreoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="CORREO ELECTRÃ“NICO"
            android:inputType="textEmailAddress"
            android:textColor="?attr/colorBackgroundFloating"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="?attr/colorControlHighlight"
            android:textCursorDrawable="@android:color/background_light"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/etTelefonoRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="TELEFONO MOVIL"
            android:inputType="phone"
            android:textColor="?attr/colorBackgroundFloating"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="?attr/colorControlHighlight"
            android:textCursorDrawable="@android:color/background_light"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>