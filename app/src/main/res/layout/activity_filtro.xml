<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_filtro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.littletemplate.corpapel.FiltroActivity"
    android:background="@drawable/background">

    <include layout="@layout/toolbar_principal" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                app:srcCompat="@drawable/corpapel_informacionsolicitada" />

            <LinearLayout
                android:id="@+id/btnDepartamento"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <TextView
                    android:clickable="false"
                    android:textColor="@android:color/white"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColorLink="?attr/colorControlHighlight"
                    android:textCursorDrawable="@android:color/background_light"
                    android:enabled="false"
                    android:hint="DEPARTAMENTO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etDepartamento"
                    android:layout_weight="1" />

                <ImageView
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_collapse_00007"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnProvincia"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <TextView
                    android:clickable="false"
                    android:textColor="@android:color/white"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColorLink="?attr/colorControlHighlight"
                    android:textCursorDrawable="@android:color/background_light"
                    android:enabled="false"
                    android:hint="PROVINCIA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etProvincia"
                    android:layout_weight="1" />

                <ImageView
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_collapse_00007"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnDistrito"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:clickable="false"
                    android:textColor="@android:color/white"
                    android:textColorHighlight="@android:color/background_light"
                    android:textColorHint="@android:color/darker_gray"
                    android:textColorLink="?attr/colorControlHighlight"
                    android:textCursorDrawable="@android:color/holo_blue_bright"
                    android:enabled="false"
                    android:hint="DISTRITO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etDistrito"
                    android:layout_weight="1" />
                <ImageView
                    android:clickable="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_collapse_00007"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btnBuscar"
        android:text="BUSCAR"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_orange_light"
        android:textColor="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</RelativeLayout>
